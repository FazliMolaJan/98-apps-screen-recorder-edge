<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAccessibility="2"
    android:background="@color/colorBackgroundCocktail"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/button_rec"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_button_rec"
        android:contentDescription="@string/description_button_rec" />

    <ImageView
        android:id="@+id/button_list"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/button_rec"
        android:src="@mipmap/ic_list"
        android:contentDescription="@string/description_list_videos" />

    <ImageView
        android:id="@+id/button_settings"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/button_list"
        android:src="@drawable/ic_settings"
        android:contentDescription="@string/description_button_settings" />

</RelativeLayout>